<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yicheng.tourism.mapper.ext.OrderMapperExt">

    <select id="qryByUserId" parameterType="com.yicheng.tourism.dto.order.req.OrderQueryReq"
            resultMap="com.yicheng.tourism.mapper.OrderMapper.BaseResultMap">
        select *
        from t_order
        where user_id = #{userId}
    </select>
    <select id="qryByCondition" parameterType="com.yicheng.tourism.dto.order.req.OrderQueryReq"
            resultMap="com.yicheng.tourism.mapper.OrderMapper.BaseResultMap">
        select t1.*,t2.store_name storeName
        from t_order t1, t_store t2
        <include refid="query_sql_where"></include>
    </select>
    <sql id="query_sql_where">
        <where>
            t1.store_id = t2.store_number
            <if test="c.storeNumber != null and '' != c.storeNumber">
                and store_id=#{c.storeNumber}
            </if>
            <if test="c.commodityName != null and '' != c.commodityName">
                and commodity_name like concat("%",#{c.commodityName},"%")
            </if>
            <if test="c.userId != null and '' != c.userId">
                and user_id like concat("%",#{c.userId},"%")
            </if>
        </where>
    </sql>

    <insert id="insert" parameterType="com.yicheng.tourism.entity.Order">
        INSERT INTO t_order
        VALUES
        (#{c.id,jdbcType=VARCHAR},
        #{c.storeId,jdbcType=VARCHAR},
        #{c.commodityName,jdbcType=VARCHAR},
        #{c.commodityId,jdbcType=VARCHAR},
        #{c.userId,jdbcType=VARCHAR},
        #{c.planPrice,jdbcType=DOUBLE},
        #{c.ifDiscount,jdbcType=VARCHAR},
        #{c.actrualPrice,jdbcType=DOUBLE},
        #{c.createTime,jdbcType=TIMESTAMP})
    </insert>
</mapper>